<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/addStudentFragment"
            android:name="com.example.assignment4.Fragments.AddStudent"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            tools:layout="@layout/add_student_fragment">
        </androidx.fragment.app.FragmentContainerView>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/studentListFragment"
            android:name="com.example.assignment4.Fragments.DisplayAllStudents"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            tools:layout="@layout/student_list_fragment">
        </androidx.fragment.app.FragmentContainerView>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>