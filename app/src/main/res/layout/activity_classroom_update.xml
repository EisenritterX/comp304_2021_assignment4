<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/studentListFragment"
            android:name="com.example.assignment4.Fragments.DisplayAllStudents"
            android:layout_width="match_parent"
            android:layout_height="271dp"
            android:layout_weight="0.5"
            tools:layout="@layout/student_list_fragment"></androidx.fragment.app.FragmentContainerView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:text="Assign Student to Class:" />

        <EditText
            android:id="@+id/editTextTextClass_ClassroomId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Classroom ID" />

        <Button
            android:id="@+id/assignClassButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="22dp"
            android:text="Assign" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>